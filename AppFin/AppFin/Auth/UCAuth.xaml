<UserControl x:Class="AppFin.Auth.UCAuth"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppFin.Auth"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="150">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="img/account.png"
                       Height="80"
                        Grid.Row="0" />
        <TextBlock x:Name="lAuth" Text="Je m'identifie"
                           Foreground="White"
                           FontSize="20"
                           Margin="0, 20, 0, 20"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Grid.Row="1" />
    </Grid>
</UserControl>
